FROM node:8

# Создание папки приложения
WORKDIR /usr/src/app

# Устанановка зависимостей
COPY package*.json ./
RUN npm install

# Копирование всех файлов приложения в контейнер
COPY . .

# Открытие порта 8080 для доступа к приложению
EXPOSE 8080

# Команда запуска приложения
CMD [ "npm", "start" ]
